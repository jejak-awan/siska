# SISKA Production Environment Configuration
# Copy this file to .env and configure according to your production environment

APP_NAME="SISKA - Sistem Informasi Sekolah Bidang Kesiswaan"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://your-domain.com

# Database Configuration - Backend
DB_CONNECTION=backend
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=siska_backend
DB_USERNAME=siska_user
DB_PASSWORD=your_strong_password_here

# Database Configuration - Public
DB_PUBLIC_HOST=127.0.0.1
DB_PUBLIC_PORT=3306
DB_PUBLIC_DATABASE=siska_public
DB_PUBLIC_USERNAME=siska_user
DB_PUBLIC_PASSWORD=your_strong_password_here

# Database Configuration - SD
DB_SD_HOST=127.0.0.1
DB_SD_PORT=3306
DB_SD_DATABASE=siska_sd
DB_SD_USERNAME=siska_user
DB_SD_PASSWORD=your_strong_password_here

# Database Configuration - SMP
DB_SMP_HOST=127.0.0.1
DB_SMP_PORT=3306
DB_SMP_DATABASE=siska_smp
DB_SMP_USERNAME=siska_user
DB_SMP_PASSWORD=your_strong_password_here

# Database Configuration - SMA
DB_SMA_HOST=127.0.0.1
DB_SMA_PORT=3306
DB_SMA_DATABASE=siska_sma
DB_SMA_USERNAME=siska_user
DB_SMA_PASSWORD=your_strong_password_here

# Database Configuration - SMK
DB_SMK_HOST=127.0.0.1
DB_SMK_PORT=3306
DB_SMK_DATABASE=siska_smk
DB_SMK_USERNAME=siska_user
DB_SMK_PASSWORD=your_strong_password_here

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=siska

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# File Storage Configuration
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Security Configuration
BCRYPT_ROUNDS=12
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com
SESSION_DOMAIN=your-domain.com

# License Configuration
LICENSE_VALIDATION_URL=https://license.jejakawan.com/validate
LICENSE_CHECK_INTERVAL=24

# Performance Configuration
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_INTERNED_STRINGS_BUFFER=8
OPCACHE_MAX_ACCELERATED_FILES=4000
OPCACHE_REVALIDATE_FREQ=2
OPCACHE_FAST_SHUTDOWN=1

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_API_KEY=your_monitoring_api_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=local

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistem sedang dalam pemeliharaan. Silakan coba lagi nanti."

# Feature Flags
FEATURE_WIZARD_INSTALLATION=true
FEATURE_LICENSE_MANAGEMENT=true
FEATURE_MULTI_JENJANG=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_API_DOCUMENTATION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_CACHE_TTL=300

# Frontend Configuration
FRONTEND_URL=https://your-domain.com
FRONTEND_BUILD_PATH=/var/www/siska/frontend/dist

# Installation Configuration
INSTALLATION_COMPLETED=true
INSTALLATION_DATE=2024-01-01
INSTALLATION_VERSION=1.0.0

# School Configuration
SCHOOL_NAME="Sekolah Contoh"
SCHOOL_JENJANG=SD
SCHOOL_NPSN=12345678
SCHOOL_ADDRESS="Jl. Contoh No. 123, Jakarta"

# Academic Year Configuration
CURRENT_ACADEMIC_YEAR=2024/2025
CURRENT_SEMESTER=1

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=false

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=GA-XXXXXXXXX

# Development Tools (Disabled in Production)
DEVELOPMENT_TOOLS_ENABLED=false
DEBUG_BAR_ENABLED=false
QUERY_LOG_ENABLED=false
